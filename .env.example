# Azure OpenAI Configuration
# Get your credentials from: https://portal.azure.com
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Optional: API version (default: 2024-02-15-preview)
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Optional: Maximum retry attempts (default: 3)
AZURE_OPENAI_MAX_RETRIES=3

# Optional: Initial retry delay in milliseconds (default: 1000)
AZURE_OPENAI_RETRY_DELAY=1000

# Optional: Request timeout in milliseconds (default: 60000)
AZURE_OPENAI_TIMEOUT=60000

# Optional: Rate limit - max requests per minute (default: 60)
AZURE_OPENAI_MAX_REQUESTS_PER_MINUTE=60

# Graph Database (Neo4j)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-password

# Vector Database (Pinecone)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# RabbitMQ Configuration
# RabbitMQ is the message broker for agent communication in the swarm
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_VHOST=codesmash
RABBITMQ_URL=amqp://admin:admin123@localhost:5672/codesmash
# RabbitMQ Management UI: http://localhost:15672

# PostgreSQL Configuration
# PostgreSQL stores agent state, task history, and persistent data
POSTGRES_DB=codesmash
POSTGRES_USER=codesmash
POSTGRES_PASSWORD=codesmash123
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://codesmash:codesmash123@localhost:5432/codesmash

# Application Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info
ENVIRONMENT=development
DEBUG=true
